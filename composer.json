{
    "name": "manialib/formatting",
    "type": "library",
    "description": "Manipulate styles in Maniaplanet strings.",
    "keywords": [
        "Ubisoft",
        "Nadeo",
        "Maniaplanet",
        "Shootmania",
        "Trackmania",
        "Manialib"
    ],
    "license": "MIT",
    "homepage": "https://github.com/manialib/formatting",
    "authors": [
        {
            "name": "Nadeo",
            "email": "contact@nadeo.com",
            "homepage": "http://www.nadeo.com/"
        }
    ],
    "autoload": {
        "psr-4": {"Manialib\\": "src/Manialib/"}
    },
    "autoload-dev": {
        "psr-4": {"": "tests/"}
    },
    "require": {
        "php": "^7.1 || ^8.0",
        "doctrine/lexer": "^1.0 || ^2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "@stable",
        "friendsofphp/php-cs-fixer": "@stable",
        "phpunit/phpunit": "^8.1"
    },
    "archive": {
        "exclude": ["/tests"]
    }
}
